{
  "manifest_version": 3,
  "name": "No YouTube AI Summary",
  "version": "2.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "no-youtube-ai-summary@teleported-cat",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [],
  "description": "Hides all AI summaries on YouTube.",

  "icons": {
    "16": "icons/no-sum-16.png",
    "32": "icons/no-sum-32.png",
    "48": "icons/no-sum-48.png",
    "128": "icons/no-sum-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["noYoutubeAiSummary.js"]
    }
  ]
}